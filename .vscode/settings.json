{
    // Point CMake to YOUR project sources (adjust if your top-level is cpp/)
    "cmake.sourceDirectory": "${workspaceFolder}/cpp",
    "cmake.buildDirectory": "${workspaceFolder}/build",
  
    // Use the VM's cmake
    "cmake.cmakePath": "/opt/homebrew/bin/cmake",
    "files.associations": {
      "chrono": "cpp"
    }
  }